<div class="row clearfix">
  <div class="col-md-12 column">
    <h1>
      <%= @trustee %>'s Assigned Projects
    </h1>
    <%= link_to "Create Project", new_project_path, class: "btn btn-success" %>
    <hr>
  </div>
  <div class="row">
    <div class="col-md-12 column">
      <% if @myprojects.any? == false %>
        <p>You haven't been assigned any projects.</p>
      <% end %>
      <% @myprojects.each do |project| %>
        <h3>
          <%= link_to project.title, project_path(project) %>
          <p><small>Created <%= project.created_at.strftime('%b %d') %> by <%= project.trustee.firstname %> <%= project.trustee.lastname.first %></small></p>
        </h3>
        <p><%= project.description %></p>
      <% end %>
    </div>
  </div>
</div>
