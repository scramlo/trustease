<div class="container">
	<div class="row">
		<div class="col-lg-6">
			<% if trustee_signed_in? %>
				<div class='text-center'>
	        <h1>
	          Hey <%= current_trustee.firstname %>!
	        </h1>
	        <p>
	          <%= link_to "All Projects", projects_path, class: "btn btn-primary" %>
	          <%= link_to "My Projects", myprojects_path, class: "btn btn-default" %>
	        </p>
				</div>
      <% else %>
        <h1>
          Welcome to Trust<i>ease!</i>
        </h1>
        <p>
          A simple way for Church Trustees to manage projects and progress.
        </p>
        <p>
          <%= link_to "Sign Up", new_trustee_registration_path, class: "btn btn-primary" %>
          <%= link_to "Sign In", new_trustee_session_path, class: "btn btn-default" %>
        </p>
      <% end %>
		</div>
		<div class="col-lg-4 col-lg-offset-2">

		</div>

	</div>
</div>
