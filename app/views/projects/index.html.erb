<h1>Listing Projects</h1>

<%= link_to "Create Project", new_project_path, class: "btn btn-success btn-sm" %>

<% @projects.each do |project| %>
  <h3>
    <%= link_to project.title, project_path(project) %>
    <%= link_to "Delete", project_path(project), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning btn-sm pull-right" %>
  </h3>
  <p><%= project.description %></p>
<% end %>
