<script>
//Sort Date
$( "#sortdate" ).click(function() {
var $projects = $('div.listprojects'),
	$projectsdiv = $projects.children('div');

$projectsdiv.sort(function(b,a){
	var an = a.getAttribute('data-date'),
		bn = b.getAttribute('data-date');

	if(an > bn) {
		return 1;
	}
	if(an < bn) {
		return -1;
	}
	return 0;
});

$projectsdiv.detach().appendTo($projects);
});

